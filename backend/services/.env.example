# Backend Environment Variables Example
# Copy to .env and adjust values. NEVER commit real secrets.

# --- Core Server ---
PORT=5000
NODE_ENV=development
BASE_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# --- Database ---
MONGO_URI=mongodb://localhost:27017/clarity

# --- JWT / Auth ---
JWT_SECRET=replace_me_legacy_secret
JWT_ACCESS_SECRET=replace_me_access_secret
JWT_REFRESH_SECRET=replace_me_refresh_secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# --- Mail (SMTP) ---
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_smtp_user@example.com
EMAIL_PASS=your_smtp_password

# --- Webhooks ---
WEBHOOK_SECRET=replace_me_webhook_secret

# --- Feature Flags ---
ENABLE_DARK_MODE=true

# --- 3rd Party API Keys (public placeholders) ---
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxx
PAYSTACK_SECRET_KEY=sk_test_xxxxxx

# --- Logging / Misc ---
LOG_LEVEL=info

# Add any additional custom variables below
